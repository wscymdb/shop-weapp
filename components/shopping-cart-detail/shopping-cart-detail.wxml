<van-popup bind:close="handleClose" show="{{ show }}" closeable round position="bottom" custom-style="height: 70%;">
  <view class="main">
    <!-- 详情 -->
    <view class="detail">
      <view class="left">
        <image src="https://tse4-mm.cn.bing.net/th/id/OIP-C.dIFgv5Jaess7oclRS7xg2wHaE8?rs=1&pid=ImgDetMain" mode="aspectFill" />
      </view>
      <view class="right">
        <view class="title">
          🔥【爆品】新疆阿克苏苹果
        </view>
        <view class="free">包邮</view>
        <view class="subtitle">冰糖心，产地甄选，坏果必赔</view>
        <view class="price">
          <view class="unit">￥</view>
          <view class="current-price">238.00</view>
          <view class="previous-price">¥256.00</view>
        </view>
      </view>
    </view>
    <!-- 规格 -->
    <view class="kind">
      <view class="name">规格</view>
      <view class="list">
        <block wx:for="{{5}}" wx:key="*this">
          <view class="item {{activeIndex === index ? 'active' : ''}}" bind:tap="handleKindClick" data-index="{{index}}">
            15粒分享装
          </view>
        </block>
      </view>
    </view>
    <!-- 数量 -->
    <view class="num">
      <view class="name">数量</view>
      <view class="counter">
        <view class="sub" bind:tap="handleCountToggle" data-type="{{-1}}">-</view>
        <view class="count">{{count}}</view>
        <view class="add" bind:tap="handleCountToggle" data-type="{{1}}">+</view>
      </view>
    </view>
    <van-button class="btn" type="primary" size="large" round color="linear-gradient(to right, #de6355, #c72e28)" bind:tap="handleConfirm">确定</van-button>
  </view>

</van-popup>