/* components/home-category.wxss */
.home-category {
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.list {
  display: flex;
  flex-wrap: wrap;

}
.item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img {
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  border-radius: 50%;
}
.name {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #4a4a4a;
}
.first-line-item {
  margin-bottom: 18rpx;
}